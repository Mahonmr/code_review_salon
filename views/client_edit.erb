<h1>Edit Client</h1>

<div class= "container">
  <form action="/clients/<%= @client.id %>/update" method="post">
    <input type="hidden" class="form-control" id="stylist_id" name="stylist_id" value="<%= @client.stylist_id %>">
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" id="first_name" name="first_name" value="<%= @client.first_name %>">
      <input type="text" class="form-control" id="last_name" name="last_name" value="<%= @client.last_name %>">
    </div><br>
    <div class="form-group">
      <label>Hair Style</label>
      <input type="text" class="form-control" id="hair_style" name="hair_style" value="<%= @client.hair_style %>">
    </div><br>
    <div class="form-group">
      <label>Preferred Appointment</label>
      <input type="text" class="form-control" id="preferred_appointment" name="preferred_appointment" value="<%= @client.preferred_appointment %>">
    </div><br>
    <button type="submit" class="btn btn-default">Submit</button>
  </form><br>
</div>

<a href="/clients">Back</a>
