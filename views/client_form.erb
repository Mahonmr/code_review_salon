<h1>Add New Client</h1>

<div class= "container">
  <form action="/client/create" method="post">
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" id="first_name" name="first_name" placeholder="First Name">
      <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Last Name">
    </div><br>
    <div class="form-group">
      <label>Hair Style</label>
      <input type="text" class="form-control" id="hair_style" name="hair_style">
    </div><br>
    <div class="form-group">
      <label>Preferred Appointment</label>
      <input type="text" class="form-control" id="preferred_appointment" name="preferred_appointment">
    </div><br>
    <button type="submit" class="btn btn-default">Submit</button>
  </form><br>
</div>

<a href="/clients">Back</a>
