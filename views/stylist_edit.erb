<h1>Edit Stylist</h1>

<div class= "container">
  <form action="/stylists/<%= @stylist.id %>/update" method="post">
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" id="first_name" name="first_name" value="<%= @stylist.first_name %>">
      <input type="text" class="form-control" id="last_name" name="last_name" value="<%= @stylist.last_name %>">
    </div><br>
    <div class="form-group">
      <label>Date of Employment</label>
      <input type="text" class="form-control" id="date_of_employment" name="date_of_employment" value="<%= @stylist.date_of_employment %>">
    </div><br>
    <div class="form-group">
      <label>Certification</label>
      <input type="text" class="form-control" id="certification_from" name="certification_from" value="<%= @stylist.certification_from %>">
    </div><br>
    <div class="form-group">
      <label>Certification Completed</label>
      <input type="text" class="form-control" id="certification_completed" name="certification_completed" value="<%= @stylist.certification_completed %>">
    </div><br>
    <button type="submit" class="btn btn-default">Submit</button>
  </form><br>
</div>

<a href="/stylists">Back</a>
